{% macro render_input(form_field, id, class='form-control', label='', class_for_label='', class_for_wrapper='md-form', type = 'text') -%}
    <div class="{{class_for_wrapper}}">
        {{ form_field(class_=class, id=id, type=type, *args, **kwargs) }}<br/>
        <label for="{{id}}" class="{{class_for_label}}">{{label}}</label>
    </div>
{%- endmacro %}

{% macro render_input_Tool(form_field, id, class='form-control', label='', class_for_label='', class_for_wrapper='md-form d-flex align-items-center', type = 'text', toolText = '') -%}
    <div class="{{class_for_wrapper}}">
        {{ form_field(class_=class, id=id, type=type, *args, **kwargs) }}<br/>
        {% if not form_field.errors %}
            <label for="{{id}}" class="{{class_for_label}}">{{label}}</label>
        {% else %}
            <label for="{{id}}" class="{{class_for_label}} danger">{{label}}</label>
        {% endif %}
        <div class="far tooltipClass">
            <span class="tooltiptext">{{toolText}}</span>
        </div>
        
    </div>
{%- endmacro %}